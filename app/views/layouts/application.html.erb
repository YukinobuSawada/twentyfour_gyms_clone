<!DOCTYPE html>
<script src="https://kit.fontawesome.com/547003d1bb.js" crossorigin="anonymous"></script>
<html>
  <head>
    <title>TwentyfourGyms</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if user_signed_in? %>
    <header>
        

        <div class="menu-box">
          <%= link_to root_path do %>
          <%= image_tag 'img/24gym_logo.png',class: "logo" %>
          <% end %>
          <p>ようこそ<%=current_user.name%>さん！</p>
        </div>
        

        <!-- 検索窓 -->
        <div class="form-inline my-2 my-lg-0">店名検索
          <%= form_tag(search_path,:method => 'get') do %>
          <%= text_field_tag :search %>
          <%= submit_tag '検索'%>
          <% end %>
        
        </div>


          <div id="sp-menu">
            <ul>
          <li><%= link_to 'ジム一覧', gyms_path, class:'nav-list' %></li>
          <li><%= link_to 'マイページ', user_path(current_user), class:'nav-list'%></li>
          <li><%= link_to'当サイトについて', about_path, class:'nav-list' %></li>
          <li><%= link_to 'ログアウト',destroy_user_session_path, method: :delete, class:'nav-list' %></li>
        </ul>
      </div>

        <div id="hm-icon">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>

    </header>

    <% else %>
    <header>
        

        <div class="menu-box">
          <%= link_to root_path do %>
          <%= image_tag 'img/24gym_logo.png',class: "logo" %>
          <% end %>
        </div>

         <div id="sp-menu">
        <ul>
          <li ><%= link_to'当サイトについて', about_path, class:'nav-list' %></li>
          <li><%= link_to'新規登録',new_user_registration_path, class:'nav-list' %></li>
          <li><%= link_to'ログイン',new_user_session_path, class:'nav-list' %></li>
          <% end %>
        </ul>
      </div>

        <div id="hm-icon">
      <a class="menu-trigger" href="#">
        <span></span>
        <span></span>
        <span></span>
      </a>
    </div>

      </header>
      <main>
      <div class="container-fluid">
        <div class="row justify-content-center">
          <% if notice %>
          <p><%= notice %></p>
          <% end %>
          <% if alert %>
          <p><%= alert %></p>
          <% end %>
              <%= yield %>
            </div>
          </div>
        </main>
        <footer class="footer">
          <div class="container">
            <p class="footer-text">CopyRight 24gym</p>
          </div>
        </footer>
      </body>
      </html>
